import os
import json

with open("config.json", "r", encoding="utf-8") as f:
    config = json.load(f)

# Env’den token çek
config["telegram"]["bot_token"] = os.environ.get("TELEGRAM_TOKEN", "")

# Env’den allowed users çek
# Örn: "12345,67890" gibi virgüllü formatla Koyeb'e ekle
allowed_users_env = os.environ.get("ALLOWED_USERS", "")
if allowed_users_env:
    config["telegram"]["allowed_users"] = allowed_users_env.split(",")

BOT_TOKEN = config["telegram"]["bot_token"]
if not BOT_TOKEN:
    raise RuntimeError("TELEGRAM_TOKEN environment variable missing!")

ALLOWED_USERS = config["telegram"]["allowed_users"]
